<Window x:Class="FixSketchupX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FixSketchupX"
        mc:Ignorable="d"
        Title="FixSketchupX" Background="#FFE5E5E5" Height="278" Width="300">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="34"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="4,4,4,2">
            <Button VerticalAlignment="Center" HorizontalAlignment="Left" Padding="16,4" Content="Convert..." x:Name="btnConvert" Click="btnConvert_Click"/>
            <CheckBox VerticalAlignment="Center" HorizontalAlignment="Right" IsChecked="True" Content="Remove Specular" x:Name="ckbSpecular"/>
        </Grid>
        <Grid Grid.Row="1" Margin="4,2,4,4">
            <TextBox Padding="4" IsReadOnly="True" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" x:Name="txtOutput"/>
        </Grid>
    </Grid>
</Window>
